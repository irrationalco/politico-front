<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default panel-login">
                <div>                                
                    <div class="row-fluid user-row">
                        <img id="login-logo" class="img-responsive"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form {{action "authenticate" on="submit"}} accept-charset="UTF-8" role="form" class="form-signin">
                        <fieldset>
                            {{input value=identification placeholder="Usuario" class="form-control"}}
                            {{input value=password type="password" placeholder="Contrase√±a" class="form-control"}}
                            {{input type="submit" value="Login" class="btn btn-lg btn-block login-btn"}}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>