{{#table-for model=model title="Registro de votantes" as |table|}}
	{{#table.nav as |nav|}}

		{{#nav.controls as |control|}}
			{{control.url-btn text="Agregar Completo" url="ine.new-voter"}}
			{{!-- {{control.action-btn text="Agregar Simple" showFlag=showQuickform}} --}}
			{{!-- {{control.action-btn text="Filtros" showFlag=showFilters}} --}}
		{{/nav.controls}}

		{{nav.filters showFlag=showFilters}}
		{{nav.voter-quickform showFlag=showQuickform refreshVoters=(route-action "refreshVoters")}}
		{{nav.searchbar setSearchQuery=(action 'setSearchQuery')}}
	{{/table.nav}}

	{{table.content deleteAction=(action 'deleteVoter')}}
	{{load-more-button action='infinityLoad' infinityModel=model}}
{{/table-for}}
